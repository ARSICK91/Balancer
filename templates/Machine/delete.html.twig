{% extends 'base.html.twig' %}

{% block body %}
    {% for label, messages in app.flashes %}
        <div class="flash-message flash-{{ label }}">
            {% for message in messages %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>
    {% endfor %}
    <h1>Удалить машину</h1>
    <p>Вы уверены, что хотите удалить машину "{{ machine.name }}"?</p>
    <form method="post">
        <button type="submit">Удалить</button>
        <a href="{{ path('main-table') }}">Отмена</a>
    </form>
{% endblock %}
